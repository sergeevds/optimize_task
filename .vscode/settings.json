{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "prettier.bracketSpacing": true,
    "prettier.printWidth": 120,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "es5",
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.formatOnSave": false
    },
    "[json]": {
        "editor.formatOnSave": false
    }
}
